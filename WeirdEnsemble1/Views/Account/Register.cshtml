@section styles{
	<link rel="stylesheet" href="/Content/styles/sign-in-register.css"/ >
}

<div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <div class="well">
            <h1 class="text-center">Register</h1>
            <form id="register">
                <div class="form-group">
                    <label for="fname">First Name:</label>
                    <input type="text" class="form-control" id="fname">
                </div>
                <div class="form-group">
                    <label for="lname">Last Name:</label>
                    <input type="text" class="form-control" id="lname" >
                </div>
                <div class="form-group">
                    <label for="email">E-mail address:</label>
                    <input type="email" class="form-control" id="email" placeholder="abc@123.com">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password">
                    <p class="register-password-text">Minimum 8 characters, with at least 1 number and 1 letter</p>
                </div>
                
                <button type="submit" class="btn btn-primary btn-block">Submit</button>

            </form>
        </div>
    </div>
</div>